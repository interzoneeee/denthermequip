generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Equipment {
  id        String   @id @default(uuid())
  type      String
  marca     String
  modelo    String
  notas     String?
  
  // Media (stored as Base64 for now)
  photo     String?  @db.Text
  photoName String?
  pdf       String?  @db.Text
  pdfName   String?

  // Technical Specs (Nullable fields to support all types)
  energia               String?
  potencia              Float?
  rendimentoBase        Float?
  rendimentoCorrigido   Float?
  volume                Float?
  rendimento            Float?
  temQPR                Boolean?
  valorQPR              Float?
  potenciaArrefecimento Float?
  potenciaAquecimento   Float?
  seer                  Float?
  scop                  Float?
  cop                   Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
